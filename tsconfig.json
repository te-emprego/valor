{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@classes": ["classes/index"],
      "@services/*": ["services/*"],
      "@interfaces": ["interfaces/index"],
      "@config": ["config"],
      "@middlewares/*": ["middlewares/*"],
      "@routes": ["routes"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}